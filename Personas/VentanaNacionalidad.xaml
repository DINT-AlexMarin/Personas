<Window x:Class="Personas.VentanaNacionalidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personas"
        mc:Ignorable="d"
        Title="Añadir Nacionalidad" Height="120" Width="200" Icon="./assets/añadir.ico" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Nacionalidad:" Margin="5,5,5,0"/>
        <TextBox Margin="5,0,5,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Aceptar" Width="80" Margin="5" IsDefault="True"/>
            <Button Content="Cancelar" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>        
    </StackPanel>
</Window>
